<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo List</title>
    <link rel="stylesheet" href="./main.css">
  </head>
  <body>
    <div class="container">
      <form action="/" method="post">
        <input type="text" id="text-bar" name="newTodo" placeholder="Add a todo...">
        <input type="submit" name="submit" value="Add Todo">
      </form>
    </div>
    <div>
      <h1>To Do List</h1>
      {{#todos}}
      <span>{{todo}}</span>
      <form action="/{{id}}/complete" method="post">
        <button type="submit">Mark As Complete</button>
      </form>
      {{/todos}}
    </div>
    <div>
      <h1>Completed Tasks</h1>
      {{#todos}}
      {{#completed}}
      <form class="incomplete" action="/{{id}}/delete" method="post">
        <span>{{todo}}</span>
        <button type="submit">Delete</button>
]      </form>
      {{/completed}}
      {{/todos}}
    </div>
\  </body>
</html>